<h3>Update client info</h3>

<form action="/clients/<%= @client.id() %>/update" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for='first_name'>First Name:</label>
    <input id='first_name' name='first_name' type='text' class="form-control">
  </div>
  <div class="form-group">
    <label for='last_name'>Last Name:</label>
    <input id='last_name' name='last_name' type='text' class="form-control">
  </div>

  <% if @stylists.any?() %>
  <p>Select this client's stylist:</p>
    <input type="hidden" name="_method" value="patch">
    <% @stylists.each() do |stylist| %>
      <div class="radio">
        <label>
          <input id='stylist_id' name='stylist_id' type="radio" value="<%= stylist.id() %>">  <%=stylist.first_name() %>
        </label>
      </div>
    <% end %>
    <% else %>
    <input id='stylist_id' name='stylist_id' type="hidden" value=0>
  <% end %>
  <button class="btn btn-primary" type="submit">Update</button>
</form>
