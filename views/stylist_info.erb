<h1>Stylist Info Page</h1>

<p>First name: <%= @stylist.first_name %></p>
<p>Last name: <%= @stylist.last_name %></p>

<h3>Select <%= @stylist.first_name %>'s clients:</h3>

<% if @clients.any?() %>
  <form action="/stylists/<%= @stylist.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <% @clients.each() do |client| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="client_ids[]" value="<%= client.id() %>"><%= client.first_name %>
        </label>
      </div>
    <% end %>

    <button type="submit">Add clients</button>
  </form>
<% end %>


<% if @stylist.clients().any?() %>
  <h3>Here are <%= @stylist.first_name %>'s saved clients::</h3>

  <ul>
    <% @stylist.clients().each() do |client| %>
      <li><%= client.first_name() %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no clients added yet!</p>
<% end %>


<p><a href="/stylists/<%= @stylist.id() %>/update">Update</a></p>

<p><a href="/">Home</a></p>
